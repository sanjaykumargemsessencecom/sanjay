<!DOCTYPE html>
<html>
  <head>
    <title>Friend</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
   

<style type="text/css">
  
.changing_text{

        -webkit-animation: color-change 2s infinite;
    }

    @-webkit-keyframes color-change {
        0% { color: red; }
        50% { color: green; }
        100% { color: red; }
    }
    


</style>










 <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/css/bootstrap.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/js/bootstrap.min.js"></script>
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/css/bootstrap.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/js/bootstrap.min.js"></script>

 <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/css/bootstrap.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/js/bootstrap.min.js"></script>


  </head>

  <body>

<nav class="navbar navbar-inverse" style="position: static;">
  <div class="container-fluid">
    <div class="navbar-header">
      <a class="navbar-brand" href="#"><p class="changing_text">Friends Book</p></a>
    </div>
    <ul class="nav navbar-nav">
      <li class="active"><%=link_to("Home",users_path, style:'color:white')%>
</li>
  <%if session[:current_user_id]%>
      <li class="dropdown"><a class="dropdown-toggle" data-toggle="dropdown" href="#">Friends <span class="caret"></span></a>
        <ul class="dropdown-menu">
          <li><%=link_to("My Friends",user_friends_path(session[:current_user_id]), style:'color:black')%></li>
          <li><%=link_to("Pending Requests",user_pending_requests_path(session[:current_user_id]))%>
</li>
        </ul>
      </li>
      <li><%=link_to("New Requests",user_requests_path(session[:current_user_id]), style:'color:white', class: notify
)%></li>
    </ul>
    <%end%>

    <ul class="nav navbar-nav navbar-right" style="margin-right: 100px">
      <%if !session[:current_user_id]%>
      <li><a href="#"><span class="glyphicon glyphicon-user" ><%= link_to 'Sign Up', new_user_path, style:'color:white;margin-top:-50px;margin-left:20px'%>
</span ></a></li>
      <%end%>
      <%if session[:current_user_id]%>
     <li><a href="#"><span class="glyphicon glyphicon-log-in"><%=link_to("Account",user_path(session[:current_user_id]), style:'color:white;margin-top:-50px;margin-left:20px')%></span></a></li>
      <li><a href="#"><span class=""><%=link_to("Logout",session_path, style:'color:white;margin-top:-30px;margin-left:0px', method: :delete)%></span></a></li>


   <%else%>
      <li><a href="#"><span class="glyphicon glyphicon-log-in"><%=link_to("Login",new_session_path, style:'color:white;margin-top:-50px;margin-left:20px')%></span></a></li>
    <%end%>
    </ul>
  </div>
</nav>

    <%= yield %>

  </body>

</html>
